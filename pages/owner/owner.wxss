/* pages/owner/owner.wxss */

/**index.wxss**/

.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.userinfo-address {
  color: #aaa;
  margin-top: 10rpx;
}

.btn {
  color: #aaa;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 255);
}

.btn::after {
  border: 0;
}

.userinfo-container {
  display: flex;
  margin-top: 50rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.userinfo-name-container {
  display: flex;
  flex-direction: column;
}

.itemview {
  display: flex;
  flex-direction: column;
}

 


