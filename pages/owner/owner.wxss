/* pages/owner/owner.wxss */

/**index.wxss**/

.userinfo {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.userinfo-address {
  color: #aaa;
  margin-top: 10rpx;
}

.btn {
  color: #aaa;
  font-size: 30rpx;
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 255);
}

.btn::after {
  border: 0;
}

.userinfo-container {
  display: flex;
  margin-top: 50rpx;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: #f8f8f8;
}

.userinfo-name-container {
  display: flex;
  flex-direction: column;
}

.owner {
  background-color: #f8f8f8;
  width: 100%;
  height: 100vh;
}

.owner-bd {
  padding-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 0rpx;
  background-color: #f8f8f8;
}

.intro-list-item-img {
  width: 32rpx;
  height: 32rpx;
}

.intro-list-item-text {
  flex: 1;
}

.intro-list-item {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.3s;
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 4rpx;
}

