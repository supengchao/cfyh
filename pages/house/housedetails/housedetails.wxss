.house {
  background-color: #f8f8f8;
  width: 100%;
  height: 100vh;
}

.house-bd {
  padding-top: 30rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  padding-bottom: 0rpx;
  background-color: #f8f8f8;
}

.intro-list-item-img {
  width: 60rpx;
  height: 60rpx;
}

.intro-list-item-text {
  flex: 1;
}

.intro-list-item {
  padding: 30rpx;
  display: flex;
  align-items: center;
  transition: opacity 0.3s;
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 4rpx;
}
